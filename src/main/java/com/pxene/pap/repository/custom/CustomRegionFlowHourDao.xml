<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pxene.pap.repository.custom.CustomRegionFlowHourDao">
  <resultMap id="CustomBaseResultMap" type="com.pxene.pap.domain.beans.RegionFlowHourBean">
    <result column="region_id" jdbcType="VARCHAR" property="regionId" />
    <result column="request_amount_sum" jdbcType="BIGINT" property="requestAmount" />
  </resultMap>
  
  <select id="selectTopN" resultMap="CustomBaseResultMap">
        SELECT
            t.region_id,
            SUM(t.request_amount) AS request_amount_sum
        FROM
            pap_t_regionflow_hour t
        WHERE
            t.datetime BETWEEN #{startTime, jdbcType=TIMESTAMP}
        AND #{endTime, jdbcType=TIMESTAMP}
        GROUP BY
            t.region_id
        ORDER BY
            request_amount_sum DESC
        LIMIT #{limitNum, jdbcType=INTEGER}
  </select>
</mapper>